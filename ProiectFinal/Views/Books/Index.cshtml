@model IEnumerable<Book>

@{
    ViewData["Title"] = "Lista cartilor";
}


<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-xs-6 border-primary mb-3">
            <div class="card mb-3" style="max-width: 500px;">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white bg-info">
                            <p class="card-text">
                                <h5 class="card-title">
                                     @item.Title                                 
                                        <a class="text-white float-right" ><i class="bi bi-pencil-square"></i></a>
                                    
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <img src="@item.ImageURL" width="100%" alt="@item.Title">
                    </div>
                    <div class="col-md-6">
                        <div class="card-body">
                            <p class="card-text"><b>Descriere: </b>@item.Description</p>
                            <p class="card-text"><b>Pret: </b>@item.Price</p>
                            <p class="card-text"><b>Numar pagini: </b>@item.Pages</p>
                            <p class="cad-text"><b>Editura: </b>@item.PublishingHouse.Name</p>
                            <p class="card-text"><b>Gen: </b>@item.BookCategory</p>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer ">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.Id">
                                    <i class="bi bi-eye-fill"></i> Show Details
                                </a>
                                <a class="btn btn-success text-white"
                                 >
                                    <i class="bi bi-cart-plus"></i> Add to Cart (Price @item.Price.ToString("c"))</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>